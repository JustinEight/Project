{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es2017"],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./" ,
    "paths": {
      "@components/*": ["src/components/*"], // gốc lúc này là src cho nên sẽ là ./components
      "@assets/*": ["src/assets/*"],   
      "@navigation/*":["src/navigation/*"],
      "@screens/*":["src/screens/*"],
      "@constants/*":["src/constants/*"] ,
      "@models/*":["src/models/*"],
      "@hooks/*":["src/hooks/*"],
      "@utils/*":["src/utils/*"],
      "@redux/*": ["src/redux/*"],
      "@services/*": ["src/services/*"],   
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
